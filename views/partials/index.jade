// Header
header
  .container
    .row
      .col-lg-12
        img.img-responsive(src='/images/logo256x256.png', alt='')
        .intro-text
          span.name Practice Languages
          hr.globe-light
          span.skills Practice any language, anytime, anywhere
// Rooms Grid Section
section#rooms(ng-include="'partials/rooms'")

// Users Online Section
section#users-online.success
  .container
    .row
      .col-lg-12.text-center
        h2 Users Online
        hr.globe-light
    .row
      .col-lg-12.text-center
        h3 We have {{ctrl.vm.numUsersOnline}} {{ctrl.vm.numUsersOnline > 1 ? 'users' : 'user' }}  online now
section#new-room
  .container
    .row
      .col-lg-12.text-center
        h2 Create new Room
        hr.gobe-primary
    .row
        .col-lg-12
            adsense(ad-client="ca-pub-8215940757054585" ad-slot="2220627754" ad-format="auto" inline-style="display:block")
    br
    .row
      .col-md-12
        h3.text-center Create a Group Room
        p Here you can create a new room and share with your friends
        form#createRoom(novalidate='')
          .row.control-group
            .form-group.col-xs-12.floating-label-form-group.controls
              label Enter the name of the room
              input#name.form-control(type='text', ng-model="ctrl.vm.roomNameToCreate", placeholder='Room name', required='', data-validation-required-message='Please enter a name of the room.')
              p.help-block.text-danger
          br
          .row
            .form-group.col-xs-12
              button.btn.btn-success.btn-lg(type='submit',ng-click="ctrl.createRoom(ctrl.vm.roomNameToCreate)") Create a Group Room
          .well.well-sm(ng-if="ctrl.vm.chatRoomCreated != null")
            <a href="{{ctrl.vm.chatRoomCreated}}" target="_blank">http://www.wetalki.com{{ctrl.vm.chatRoomCreated}}</a>
            
     .row
      .col-md-12
      
        h3.text-center Create a One to One Room
        p Here you can create a new room and share with only one person
        form#createRoom(novalidate='')
          .row
            .form-group.col-xs-12
              button.btn.btn-success.btn-lg(type='submit',ng-click="ctrl.create1to1Room(ctrl.vm.username1to1Chat)") Create a One To One Room
          .well.well-sm(ng-if="ctrl.vm.chat1to1Created != null") 
            <a href="{{ctrl.vm.chat1to1Created}}" target="_blank">http://www.wetalki.com{{ctrl.vm.chat1to1Created}}</a>  
section#find-partner
  .container
    .row
      .col-lg-12.text-center
        h2 Find a Partner
        hr.gobe-primary
    .row
        .col-lg-12
            adsense(ad-client="ca-pub-8215940757054585" ad-slot="2220627754" ad-format="auto" inline-style="display:block")
    br
    .row
      .col-md-12
        p Here you can find a partner by filling the form bellow
        form#contactForm(name='sentMessage', novalidate='')
          .row.control-group
            .form-group.col-md-4.col-xs-12.floating-label-form-group.controls
              label Choose the language you want to talk
              select#language.form-control.col-md-4(required='',data-ng-model="ctrl.vm.language", data-validation-required-message='Please choose the language.')
                option(value="") Select the language                        
                option(value="en") English
                option(value="pt") Portuguese
                option(value="sp") Spanish
                option(value="fr") French
                option(value="ge") German
                option(value="it") Italian
                option(value="ch") Chinese
                option(value="ja") Japonese
                option(value="ko") Korean
                option(value="ru") Russian
                option(value="ar") Arabic
                option(value="la") Latin
                option(value="hi") Hindi
              p.help-block.text-danger
          .row.control-group
            .form-group.col-xs-12.col-md-4.floating-label-form-group.controls
              label Choose your sex
              select#language.form-control.col-md-4(required='', ng-model="ctrl.vm.userSex" data-validation-required-message='Please choose your sex.')
                option(value="") Select your sex
                option(value="m") Male 
                option(value="f") Female 
              p.help-block.text-danger
          .row.control-group
            .form-group.col-xs-12.col-md-4.floating-label-form-group.controls
              label Choose the sex of your partner
              select#language.form-control.col-md-4(required='',  ng-model="ctrl.vm.partnerSex", data-validation-required-message='Please choose your sex.')
                option(value="") Select the sex of your partner
                option(value="a")  Any
                option(value="m") Male 
                option(value="f") Female 
              p.help-block.text-danger
          br
          .row
            .form-group.col-xs-12
              button.btn.btn-success.btn-lg(type='submit', ng-click="ctrl.findPartner(ctrl.vm.username,ctrl.vm.language,ctrl.vm.userSex, ctrl.vm.partnerSex)")
                i.fa.fa-search  
                |   Find
